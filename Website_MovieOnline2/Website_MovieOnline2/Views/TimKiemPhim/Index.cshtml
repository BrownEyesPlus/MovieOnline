@model PagedList.IPagedList<Website_MovieOnline2.Models.ModelPhim2.PhimView>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

