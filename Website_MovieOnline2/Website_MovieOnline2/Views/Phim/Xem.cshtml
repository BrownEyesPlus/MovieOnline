@using Website_MovieOnline2.Models.ModelPhim1;
@model dynamic

@{
    ViewBag.Title = "Xem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br class="mt-5 mb-3">
<br class="mt-5 mb-3">
<br class="mt-5 mb-3">

<div class="noidung1">

    <div class="container mt-1 mb-3">
        <div class="row">
            <div class="col-md-12">
                
                <h3>@Model.PhimView.TenPhimTiengViet</h3>
                <iframe style="width: 100%; height:650px" src="~/Content/videos/@Model.PhimView.TenTep" frameborder="0" allowfullscreen=""></iframe>

            </div>
        </div>
    </div>
</div> <!-- het noi dung 1 -->

<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <div class="danhgia mt-1 mr-1">
                <div class="">
                    <h3>Đánh giá phim:</h3>
                    <p>...</p>
                </div>
            </div>


            <div class="row">
                <div class="quangcao1 col-md-12">
                    <img class="img-fluid" src="https://via.placeholder.com/980x100" style="width: 100%" alt="">
                </div>
                <div class="quangcao2 col-md-6">
                    <img class="img-fluid" src="https://via.placeholder.com/490x100" style="width: 100%; margin: 0px; padding: 0px" alt="">
                </div>
                <div class="quangcao3 col-md-6">
                    <img class="img-fluid" src="https://via.placeholder.com/490x100" style="width: 100%;margin: 0px; padding: 0px" alt="">
                </div>
            </div>


        </div>
    </div>
</div>


<div class="container mt-3">
    <div class="row">
        <div class="col-sm-12">
            <h3>Bình luận về phim:</h3>
            <div class="card">
                <div class="card-block">
                    
                    @{ var m = Model.PhimView;}

                    @using (Html.BeginForm("BinhLuan", "Phim", FormMethod.Post))
                    {

                        @*@Html.TextBox("Ma", (string)Model.BinhLuanView.NoiDung)*@

                        @Html.Hidden("noidung")
                        
                        <input type="text" name="noidung" id="noidung" />
                        <input type="submit" value="Bình luận" class="btn btn-success text-xs-center" />
                    }

                    



                    @foreach (BinhLuanView it in Model.BinhLuanView)
                    {
                        <div class="container" style="background-color:antiquewhite">
                            <span style="color:#ad1e53">
                                @it.TenHienThi :
                            </span>
                            <span class="float-left">
                                @it.NoiDung
                            </span>
                            <p style="color:#c9302c80">
                                vào lúc @it.ThoiGian
                            </p>
                        </div>

                    }

                </div>
            </div>

        </div>
    </div>
</div>

