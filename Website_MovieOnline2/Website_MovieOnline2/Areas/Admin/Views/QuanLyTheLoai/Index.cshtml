@model IEnumerable<Website_MovieOnline2.Models.ModelPhim1.TheLoai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Lauyout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>Thể loại phim</h2>

            <p>
                @Html.ActionLink("Thêm mới", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        Tên thể loại
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ten)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Ma }) |

                            @Html.ActionLink("Delete", "Delete", new { id = item.Ma })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

